 {% extends "customer/base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block body %}


    <main id="main">

        <section class="login col-5">

            <h1 class="h3">Modifier mon mot de passe</h1>

            <div class="">
                {% include "_messages_flash.html.twig" %}
            </div>
            
                <div class="retour">
                    <a href="{{ path('profile') }}"><i class="fa-solid fa-arrow-left"></i> Retour</a>
                </div>    

            <div id="login-form">

                <div class="create">

                    {{ form_start(form) }}

                            {{ form_row(form.currentPassword) }}
            
                            {{ form_row(form.plainPassword.first) }}

                            {{ form_row(form.plainPassword.second) }}

                    <button type="submit" class="btn-form">Modifier</button>
                    {{ form_end(form) }}


                </div>    

            </div>

        </section>   
        
    </main>
   
{% endblock %}
